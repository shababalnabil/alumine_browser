<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/suggestion_list"
    android:layout_margin="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="?selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/listIcon"
        android:layout_marginStart="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/round_search_24"/>

    <TextView
        android:id="@+id/suggest_text"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:padding="4dp"
        android:gravity="center_vertical"
        android:text="How to make a cake"
        app:layout_constraintEnd_toStartOf="@id/pick_sg"
        app:layout_constraintStart_toEndOf="@id/listIcon"
        android:layout_width="0dp"
        android:layout_height="match_parent"/>

    <ImageView
        android:background="?selectableItemBackgroundBorderless"
        android:focusable="true"
        android:clickable="true"
        android:id="@+id/pick_sg"
        android:layout_marginEnd="4dp"
        android:rotation="-45"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/round_arrow_upward_24"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>